{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "mocks/**/*.json"],
  "exclude": ["node_modules"],
  "types": ["@types/jest"]
}
