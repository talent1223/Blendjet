{
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", "vendor"],
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "baseUrl": "."
  }
}
